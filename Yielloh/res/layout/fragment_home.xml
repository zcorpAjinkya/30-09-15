<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="90"
        android:orientation="vertical"
        android:weightSum="100" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="100" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="70"
                    android:orientation="vertical"
                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="100" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="50"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/coverPhoto"
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="50"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_launcher" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="50"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/welcome"
                                style="@style/white_title_text_without_bold_size"
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_marginTop="5dp"
                                android:layout_weight="30"
                                android:gravity="bottom|center"
                                android:paddingBottom="5dp"
                                android:text="@string/welcome" />

                            <TextView
                                android:id="@+id/userTagLine"
                                style="@style/white_text_without_bold"
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_marginTop="5dp"
                                android:layout_weight="10"
                                android:gravity="center"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textView3"
                                style="@style/white_text_without_bold"
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_marginTop="5dp"
                                android:layout_weight="10"
                                android:gravity="center"
                                android:text="@string/interest_followers_caption" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="100dp"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/profilePhoto"
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="100dp"
                            android:src="@drawable/ic_launcher" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="30" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/interestNumber"
                            style="@style/white_title_number_without_bold"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="60"
                            android:gravity="center"
                            android:text="@string/interest_number" />

                        <TextView
                            style="@style/white_text_without_bold"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="40"
                            android:gravity="center_horizontal"
                            android:paddingTop="5dp"
                            android:text="@string/interest_caption" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/followersNumber"
                                style="@style/white_title_number_without_bold"
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="60"
                                android:gravity="center"
                                android:text="@string/followers_number" />

                            <TextView
                                style="@style/white_text_without_bold"
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="40"
                                android:gravity="center_horizontal"
                                android:paddingTop="5dp"
                                android:text="@string/followers_caption" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:background="@color/backgroung_color"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/followInterest"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/topics_icon" />

        <ImageView
            android:id="@+id/addPost"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/plus_sign" />

        <ImageView
            android:id="@+id/addPeopleFollowers"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/followers_icon" />
    </LinearLayout>

</LinearLayout>