<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMainlevelToc"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/ml_header_bg"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/imgMLTocPrev"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="1dp"
        android:src="@drawable/sub_toc_prev_click" />

    <ImageView
        android:id="@+id/imgMLTocHome"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imgMLTocPrev"
        android:src="@drawable/home" />

    <ImageView
        android:id="@+id/imgMLTocNext"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="1dp"
        android:src="@drawable/sub_toc_next_click" />

    <ImageView
        android:id="@+id/imgFirstLTocBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@id/imgMLTocNext"
        android:src="@drawable/fav_notick"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgFirstLTocNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/imgFirstLTocBookmark"
        android:src="@drawable/note_notick"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgMLTocpdf"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgMLTocNext"
        android:padding="3dp"
        android:src="@drawable/algo_pdf_selector"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtMLChapHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/imgFirstLTocNote"
        android:layout_toRightOf="@+id/imgMLTocHome"
        android:gravity="left"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="13.5sp"
        android:textStyle="bold" />

</RelativeLayout>